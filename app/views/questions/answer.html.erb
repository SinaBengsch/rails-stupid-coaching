<!-- will display the question you ask your coach as well as his answer -->

<div class="content-container">
  <div class="question">
    <p><%=@question.capitalize%></p>
    <p>--You</p>
  </div>

  <div class="answer">
    <p id="coach"><%=@answer%> </p>
    <p>--Your coach</p>
  </div>

  <%= link_to "Ask a new question", ask_path, class: "link"%>
</div>
